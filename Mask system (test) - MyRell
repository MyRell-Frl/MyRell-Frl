CMD:togmask(playerid, params[]) 
{
	if(IsPlayerConnected(playerid))
	if(pData[playerid][pMask] == 0) return Error(playerid, "Anda tidak memiliki mask.");
	//if(pData[playerid][pMaskOn] == 0)

    switch (pData[playerid][pMaskOn])
    {
        case 0:
        {
            new str[128];

            foreach (new i : Player) {
                ShowPlayerNameTagForPlayer(i, playerid, 0);
            }
            format(str, sizeof(str), "Mask_#%d\nHP: ["RED_E"%.1f"WHITE_E"] AP: ["GREEN_E"%.1f"WHITE_E"]", pData[playerid][pMaskID], pData[playerid][pHealth], pData[playerid][pArmour]);
            pData[playerid][pNameTag] = CreateDynamic3DTextLabel(str, -1, 0.0, 0.0, 0.2, 8.0, playerid, INVALID_VEHICLE_ID, 1);

            SendClientMessageEx(playerid, COLOR_ARWIN, "MASKINFO: "WHITE_E"Mask {00D900}ON!");
            pData[playerid][pMaskOn] = 1;
        }
        case 1:
        {
            foreach (new i : Player) {
                ShowPlayerNameTagForPlayer(i, playerid, 1);
            }
            ResetNameTag(playerid);

            pData[playerid][pMaskOn] = 0;
            SendClientMessageEx(playerid, COLOR_ARWIN, "MASKINFO: "WHITE_E"Mask {FF0000}OFF!");
        }
    }
    return 1;
}
